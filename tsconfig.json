{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "src",
    "outDir": "build",
    "inlineSourceMap": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": false,
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ],
    "types": [
      "node",
    ]
  },
  "include": [
    "packages/**/*"
  ]
}
