{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "baseUrl": "src",
    "inlineSourceMap": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": [
      "es2019"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./src",
    "./typings/**/*.d.ts"
  ]
}
