{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./test-output",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "typings/**/*",
    "modules/**/*",
    "test/**/*"
  ]
}